<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <!-- 메인 컨테이너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STABLE CUBE"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <!-- QR 코드 이미지 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/iv_payment_qr"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:background="#ffffff" />

        </androidx.cardview.widget.CardView>

        <!-- 결제 안내 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR 코드를 스캔하여 결제하세요"
            android:textColor="#b0b0b0"
            android:textSize="18sp"
            android:layout_marginBottom="40dp" />

        <!-- 프린터 상태 표시 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#2a2a2a"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- 프린터 상태 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프린터 상태"
                android:textColor="#808080"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 프린터 상태 표시 -->
            <TextView
                android:id="@+id/tv_printer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프린터 확인 중..."
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- 시스템 메시지 -->
        <TextView
            android:id="@+id/tv_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시스템 준비 중..."
            android:textColor="#808080"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <!-- 하단 날짜/시간 표시 -->
    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:text="2024-01-01 12:00:00"
        android:textColor="#606060"
        android:textSize="14sp" />

    <!-- 버전 정보 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:text="v2.0 | Port: /dev/ttyS4"
        android:textColor="#404040"
        android:textSize="12sp" />

</RelativeLayout>
