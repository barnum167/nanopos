<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ngrok 도메인에 대해 인증서 검증 우회 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <domain includeSubdomains="true">https://a7b4aeba3e88.ngrok-free.app</domain>
        <domain includeSubdomains="true">ngrok-free.app</domain>
        <domain includeSubdomains="true">ngrok.io</domain>
        <domain includeSubdomains="true">ngrok.com</domain>
        <trust-anchors>
            <!-- 시스템 인증서와 사용자 정의 인증서 모두 허용 -->
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- 개발용: 모든 도메인에 대해 인증서 검증 완화 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- 디버그 전용: 모든 인증서 허용 -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>